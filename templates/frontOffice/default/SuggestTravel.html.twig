{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('dashAssets/css/StyleFileComponent.css') }}" rel="stylesheet">
{% endblock %}


{% block body %}

    <!-- =========================== Breadcrumbs =================================== -->
    <div class="breadcrumbs_wrap dark">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="text-center">
                        <h2 class="breadcrumbs_title">Proposer un trajet</h2>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#"><i class="ti-home"></i></a></li>
                                <li class="breadcrumb-item active" aria-current="page">{% trans %}Proposer un trajet{% endtrans %}</li>
                            </ol>
                        </nav>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- =========================== Breadcrumbs =================================== -->

    <!-- =========================== Login/Signup =================================== -->

    <section>
        <div class="container">

            <div class="row">

                <div class="col-lg-6 col-md-12 col-sm-12 mx-auto">
                    <div class="login_signup">
                        <h3 class="login_sec_title">{% trans %}Proposer un trajet{% endtrans %}</h3>

                        {{ form_start(form,{'attr':{'class':'needs-validation clearfix','enctype':'multipart/form-data'}}) }}
                            <div class="text-danger">{{ form_errors(form)}}</div>
                            <div class="form-row">

                                <section class="errorImage p-0">
                                    {% for  message in app.flashes('countFlashImage') %}
                                        {% if message|number_format > 1 %}
                                            <div class="text-warning font-weight-bold errorImage"><i class="fas fa-exclamation-triangle"></i>
                                                {{ message }} {% trans %}wrong images{% endtrans %}
                                            </div>
                                        {% elseif message|number_format == 1%}
                                            <div class="text-warning font-weight-bold errorImage"><i class="fas fa-exclamation-triangle"></i>
                                                {% trans %}image invalide{% endtrans %}
                                            </div>
                                        {% endif %}
                                    {% endfor %}

                                    {% for  message in app.flashes('errorImage')|reduce((unique, item) => item in unique ? unique : unique|merge([item]), []) %}
                                        <div class="text-warning font-weight-bold errorImage"><i class="fas fa-exclamation-triangle"></i> {{ message }}</div>
                                    {% endfor %}
                                </section>

                                <div class="text-danger font-weight-bold">
                                    {{ form_errors(form) }}
                                </div>
                                <div class="text-danger font-weight-bold">
                                    {% for message in app.flashes('error') %}
                                        {{ message }}
                                    {% endfor %}
                                </div>
                                <div class="row">

                                    <div class="input-group">
                                        <div class="box box-file">
                                            {{ form_widget(form.images, {'attr':{'class':'inputfile','type':'file','data-multiple-caption':'{count} files selected'}}) }}
                                            <label for="travel_images"><span></span> <strong><svg xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17"><path d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z"/></svg> Choose a picture &hellip;</strong></label>
                                        </div>
                                    </div>


                                    <div class="col-lg-6 col-md-6">
                                        <div class="form-group">
                                            <div class="text-danger">{{ form_errors(form.start)}}</div>
                                            <label for="validationCustom29">Ville de départ</label>
                                            {{ form_widget(form.start,{'attr':{'class':'form-control','type':'text','id':'validationCustom29'}}) }}
                                        </div>
                                    </div>

                                    <div class="col-lg-6 col-md-6">
                                        <div class="form-group">
                                            <div class="text-danger">{{ form_errors(form.finish)}}</div>
                                            <label for="validationCustom29">Ville d'arrivée</label>
                                            {{ form_widget(form.finish , { 'attr' : {'class':'form-control'} }) }}
                                        </div>
                                    </div>

                                    <div class="col-lg-6 col-md-6">
                                        <div class="form-group">
                                            <div class="text-danger">{{ form_errors(form.startDate)}}</div>
                                            <label for="validationCustom29"> Date</label>
                                            {{ form_widget(form.startDate , { 'attr' : {'class':'form-control'} }) }}
                                        </div>
                                    </div>

                                    <div class="col-lg-12 col-md-12">
                                        <div class="form-group">
                                            <div class="text-danger">{{ form_errors(form.placeNumber)}}</div>
                                            <label for="validationCustom29">Nombre de Places</label>
                                            {{ form_widget(form.placeNumber , { 'attr' : {'class':'form-control'} }) }}
                                        </div>
                                    </div>

                                    <div class="col-lg-12 col-md-12">
                                        <div class="form-group">
                                            <div class="text-danger">{{ form_errors(form.price)}}</div>
                                            <label for="validationCustom29">Prix</label>
                                            {{ form_widget(form.price , { 'attr' : {'class':'form-control'} }) }}
                                        </div>
                                    </div>


                                    <div class="col-lg-12 col-md-12">
                                        <div class="form-group">
                                            <div class="text-danger">{{ form_errors(form.description)}}</div>
                                            <label for="validationCustom29">Description</label>
                                            {{ form_widget(form.description , { 'attr' : {'class':'form-control'} }) }}
                                        </div>
                                    </div>

                                    <div class="col-lg-12 col-md-12">
                                        <div class="login_flex">
                                            <div class="login_flex_2">
                                                <div class="form-group mb-0">
                                                    <button type="submit" class="btn btn-md btn-theme">Proposer</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        {{ form_end(form) }}

                    </div>
                </div>

            </div>
        </div>
    </section>
    <!-- =========================== Login/Signup =================================== -->

{% endblock %}


{% block javascripts %}

{% endblock %}

